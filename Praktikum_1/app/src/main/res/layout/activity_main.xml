<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informasi Pengguna"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textStyle="bold"
        android:layout_below="@id/titleTextView"/>

    <!-- Email -->
    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="bold"
        android:layout_below="@id/usernameTextView"
        android:layout_marginTop="8dp"/>

    <!-- Created At -->
    <TextView
        android:id="@+id/createdAtTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created At: "
        android:textStyle="bold"
        android:layout_below="@id/emailTextView"
        android:layout_marginTop="8dp"/>

    <!-- Updated At -->
    <TextView
        android:id="@+id/updatedAtTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Updated At: "
        android:textStyle="bold"
        android:layout_below="@id/createdAtTextView"
        android:layout_marginTop="8dp"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/updatedAtTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <!-- CopyRight -->
    <TextView
        android:id="@+id/copyRightName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By: Tegar Maulana Fahreza (Low_Scarlet)"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
